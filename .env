# --- SMTP-настройки (для отправки писем) ---
export SMTP_SERVER=smtp.example.com           # Адрес SMTP-сервера (например: smtp.gmail.com, smtp.yandex.ru)
export SMTP_PORT=587                           # Порт SMTP (обычно 587 для TLS, 465 для SSL)
export EMAIL=user@example.com                 # Email отправителя (должен совпадать с SMTP-авторизацией)
export PASSWORD=your_smtp_password          # Пароль/app-пароль для SMTP-авторизации
export RECIPIENT=recipient@example.com     # Адрес, на который будут приходить письма


# --- Telegram-бот ---
export TELEGRAM_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZ  # Токен бота от @BotFather (формат: цифры:буквенно-цифровая строка)


# --- LDAP-настройки (для поиска пользователей) ---
export LDAP_SERVER=ldap.example.com        # Хост LDAP-сервера (например: ldap.company.com)
export LDAP_PORT=636                         # Порт LDAP (636 — для LDAPS, 389 — для незашифрованного)
export LDAP_USE_SSL=True                     # Использовать SSL/TLS (True/False)
export LDAP_BASE_DN=dc=example,dc=com      # Базовый DN для поиска (например: dc=company,dc=local)
export LDAP_USER=cn=admin,dc=example,dc=com # Привилегированный пользователь для подключения (формат: cn=...,dc=...)
export LDAP_PASSWORD=your_ldap_password     # Пароль для LDAP-пользователя
